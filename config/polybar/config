[bar/main_bar]
monitor = ${env:MONITOR:eDP1}
bottom = false
width = 100%
height = 30
offset-x = 2.5%
offset-y = 0%
radius = 5.0
fixed-center = true

background = ${colors.my_color8}
foreground =  ${colors.my_foreground}

line-size = 2.5
line-color = ${colors.my_color4}

border-size = 15%
border-top-size = 7%
border-bottom-size = 0%
